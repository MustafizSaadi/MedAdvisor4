<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ludwigprandtl.medadvisor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ReminderMainActivity"/>
        <activity android:name=".AddEditCreateActivity" />
        <activity
            android:name=".MainActivity"
            android:label="Symptoms"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DiseaseDetails"
            android:label="Disease Details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SearchSymptoms"
            android:label="Search Symptoms"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProbableDisease"
            android:label="Probable Diseases"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Home"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DrugInfoComm"
            android:label="Drug Info"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DrugInfoGen"
            android:label="Drug Info"
            android:screenOrientation="portrait" />
        <activity android:name=".DrugDetails" />
        <activity
            android:name=".DrugList"
            android:label="Drugs and Medication "
            android:screenOrientation="portrait" />
    </application>

</manifest>